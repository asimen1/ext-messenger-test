{

    // Enforcing options
    // http://www.jshint.com/docs/options/#enforcing-options

    "bitwise": true,
    "eqeqeq": true,
    "forin": true,
    "latedef": false,
    "noarg": true,
    "nonbsp": true,
    "nonew": true,
    "undef": true,
    "unused": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Relaxing options
    // http://www.jshint.com/docs/options/#relaxing-options

    "esnext": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Environments
    // http://www.jshint.com/docs/options/#environments

    "browser": true,
    "jquery": true,
    "node": true,
    "globals": {
        "define": false,
        "require": false,
        "requirejs": false,
        "Restyler": false,
        "QUnit": false,
        "chrome": false,
        "QUnit": false,
        "$": false
    }
}
